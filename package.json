{
  "name": "alfred-v3",
  "version": "3.0.0",
  "private": true,
  "description": "Alfred v3 â€” Privacy-first AI assistant",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --project e2e",
    "test:security": "vitest run --project security",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "gateway": "tsx src/index.ts",
    "gateway:dev": "tsx watch src/index.ts",
    "cli": "node alfred.mjs",
    "clean": "pnpm -r exec rm -rf dist node_modules/.cache",
    "dev:desktop": "cd apps/desktop-tauri && pnpm tauri dev"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.19.0"
  }
}

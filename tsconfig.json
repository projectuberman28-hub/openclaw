{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@alfred/core": ["./packages/core/src"],
      "@alfred/core/*": ["./packages/core/src/*"],
      "@alfred/agent": ["./packages/agent/src"],
      "@alfred/agent/*": ["./packages/agent/src/*"],
      "@alfred/tools": ["./packages/tools/src"],
      "@alfred/tools/*": ["./packages/tools/src/*"],
      "@alfred/memory": ["./packages/memory/src"],
      "@alfred/memory/*": ["./packages/memory/src/*"],
      "@alfred/privacy": ["./packages/privacy/src"],
      "@alfred/privacy/*": ["./packages/privacy/src/*"],
      "@alfred/forge": ["./packages/forge/src"],
      "@alfred/forge/*": ["./packages/forge/src/*"],
      "@alfred/playbook": ["./packages/playbook/src"],
      "@alfred/playbook/*": ["./packages/playbook/src/*"],
      "@alfred/fallback": ["./packages/fallback/src"],
      "@alfred/fallback/*": ["./packages/fallback/src/*"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/privacy" },
    { "path": "./packages/memory" },
    { "path": "./packages/fallback" },
    { "path": "./packages/agent" },
    { "path": "./packages/tools" },
    { "path": "./packages/forge" },
    { "path": "./packages/playbook" }
  ],
  "exclude": ["node_modules", "dist", "apps/desktop-tauri", "apps/ios"]
}
